@inherits LayoutComponentBase

@inject NavigationManager NavigationManager
@inject IStringLocalizer<MainLayout> Loc
@inject Services.SabatexLocalizer sabatexLocalizer

<MudThemeProvider Theme="_currentTheme"/> 
<MudDialogProvider />
<MudSnackbarProvider />


<MudLayout>
    <MudAppBar Elevation="25">
        <MudHidden Breakpoint="Breakpoint.SmAndUp" Invert="true">
            <MudText  Typo="Typo.h5" Class="mudblazor-appbar-brand-text">@Loc["1C сервіс"]</MudText>
        </MudHidden>
        <MudSpacer /> 
        <CultureSelector/>
        <MudTooltip Text=@Loc["Переключити тему світла/темна"]>
            <MudIconButton Icon="@Icons.Material.Filled.Brightness4" Color="Color.Inherit" OnClick="@((e) => SwithTheme())" />
        </MudTooltip>
        <MudTooltip Text="Початковий код">
            <MudIconButton Icon="@Icons.Custom.Brands.GitHub"  Color="Color.Inherit" Link="https://github.com/sabatex/BankServiceFor1C8"/>  
        </MudTooltip>
    </MudAppBar>  

     <MudMainContent Class="content px-4">
        @Body
     </MudMainContent>
    
</MudLayout>